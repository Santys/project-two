{{#each bookInDB.reviews}}
    <div class="col-md-12">
        <div class="card review-container light-white">
            <div class="card-body row">
                <div>
                    <p class="h4 card-title">
                        {{this.owner}}
                    </p>
                    <p class="h6">{{this.comment}}</p>
                </div>
                <p class="h5">Rating: {{this.rating}}</p>       
            </div>
        </div>
    </div>
{{/each}}



 <!-- Modal -->
<div class="modal fade black" id="{{bookInfo.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Review "{{bookInfo.volumeInfo.title}}"</h5>
        </div>
        <div class="modal-body">
            <form id="myForm1" method="POST" action="review/{{bookInfo.id}}">
                <div class="form-group mb-3">
                    <label class="form-label">Review</label>
                    <textarea rows="5" class="form-control" type="text" name="review"></textarea> 
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">Rate</label>
                    <input class="form-control" type="number" name="rating" min="0" max="10" required/>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn grey" data-dismiss="modal">Close</button>
            <button form="myForm1" type="submit" class="btn light-blue text-light">Submit review</button>          
        </div>
        </div>
    </div>
</div>