<div class="col-md-12">
    <div class="card review-container light-white">
        <div class="card-body img-body col-md-3">
            <img class="card-img-top border" src="{{bookInfo.volumeInfo.imageLinks.thumbnail}}" alt="{{bookInfo.volumeInfo.title}}" onerror="this.src='../images/default_book_cover.jpg';"/>
        </div>
        <div class="card-body col-md-9 row">
            <div>
                <p class="h4 card-title">
                    {{bookInfo.volumeInfo.title}}
                </p>
                {{#each bookInfo.volumeInfo.authors}}
                    <p class="h6 card-title">
                        {{this}}
                    </p>
                {{/each}}
            </div>
            <p>{{{bookInfo.volumeInfo.description}}}</p>      
            <button type="button" class="btn grey btn-review" data-toggle="modal" data-target="#{{bookInfo.id}}">
                    Review
            </button>
        </div>
            
    </div>
</div>


