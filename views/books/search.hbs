<form action="/books/search" method="GET">
        <input type="text" name="title" id="title" value="{{search}}"/>
        <button id="search-button" class="btn btn-success" type="submit">SEARCH</button>
</form>
<div class="row">
    <p>Results for "{{search}}"</p>
    {{#each booksInfo}}
        <div class="col-md-3">
            <div class="card book-container">
                <div class="card-body img-body">
                    <img class="card-img-top border" src="{{this.volumeInfo.imageLinks.thumbnail}}" alt="{{this.volumeInfo.title}}" onerror="this.src='../images/default_book_cover.jpg';"/>
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        {{this.volumeInfo.title}}
                    </h5>
                    <p>{{this.volumeInfo.authors.[0]}}</p>
                    <a class="btn btn-success active text-light" href="/books/{{this.id}}">
                        View book
                    </a>
                </div>
            </div>
        </div>
    {{/each}}
</div>